[alias]
  st         = status -s
  df         = diff
  co         = checkout
  ci         = commit -a
  cia        = commit -a --amend --no-edit
  cinv       = commit -a --no-verify
  br         = branch -a
  lformat    = log --pretty=format:'%C(auto)%h%d %s %Cgreen(%ar) %Cblue<%an>%Creset'
  l          = log --pretty=format:'%C(auto)%h%d %s %Cgreen(%ar) %Cblue<%an>%Creset' --graph --decorate --no-merges
  lg         = log --pretty=format:'%C(auto)%h%d %s %Cgreen(%ar) %Cblue<%an>%Creset' --graph --decorate
  lag        = log --pretty=format:'%C(auto)%h%d %s %Cgreen(%ar) %Cblue<%an>%Creset' --graph --decorate --all
  revert     = reset --hard
  dft        = difftool
  diffshort = diff --name-status
  b          = rev-parse --abbrev-ref HEAD
  pusho      = "!git push origin --set-upstream $(git b);"
  fetcha     = fetch --all --prune --tags
  pff        = pull --ff-only
  pll        = pull --rebase
  clone      = clone --recursive
  pusho      = push origin
  raster     = rebase origin/master

[core]
  excludesfile = ~/.config/config/git/gitignore_global
  pager    = less -r
  editor   = vim

[diff]
  tool     = gvimdiff

[difftool]
  prompt=False

[merge]
  tool=gvimdiff

[user]
  name  = Emmanuel Ohayon
  email = eohayon@mail.ks.int

[push]
  default = simple

[color]
  ui     = always
  status = always
  branch = always

[status]
  submoduleSummary = true

[oh-my-zsh]
  # hide-status = 1
  hide-dirty  = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
