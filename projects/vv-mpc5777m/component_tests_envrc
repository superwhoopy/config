# vim: set ft=sh:

. ../.envrc

{ _iswin && _venv_sh="../.venv/Scripts/activate"; } || \
  _venv_sh="../.venv/bin/activate"

# Python virtual env
. ${_venv_sh}

_pytest="pytest --t32-exe='${T32}' --bootloader='${BOOTLOADER}'"

alias pytest="${_pytest}"
alias pythaast="notify ${_pytest} --haas=${HAAS_BOARDS}"
